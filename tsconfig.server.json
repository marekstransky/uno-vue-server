    "rootDir": ".",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "src", "server/data/**/*"]
}
